<div class='page page--background'>
  <header>
    {{> back-button}}
  </header>

  <form class='page__section'>
    <h1 class='page__title'>Registration</h1>

    <div class='form'>
    
      <div class='form__item'>
        {{> field action = "signupForm.change" placeholder = "Email" label = "Email" name="email" }}
        <span name='email' class='form__error'>Помилка</span>
      </div>
      <div class='form__item'>
        {{> field-password action = "signupForm.change"  placeholder = "Password" label = "Password" name="password" }}
        <span name='password' class='form__error'>Помилка</span>
      </div>
      <div class='form__item'>
        {{> field-password action = "signupForm.change"  placeholder = "Password again" label = "PasswordAgain" name="passwordAgain" }}
        <span name='password' class='form__error'>Помилка</span> 
      </div>

      <div class='form__item'>
        {{> field-select action = "signupForm.change"  placeholder = "Оберіть роль" label = "Роль" name="role" list = data.role }}
        <span name='role' class='form__error'>Помилка</span>
      </div>

      <div class='form__item'>
        {{> field-checkbox action = "signupForm.change"  label = "Ви погоджуєтесь з правилами сервісу" name="isConfirm" }}
        <span name='isConfirm' class='form__error'>Помилка</span>
      </div>
    </div>

    <button class='button button--disabled' type='button' onclick='signupForm.submit()'>Зареєструватися</button>

    <span class='alert alert--disabled'>Внимание, помилка!</span>
  </form>
</div>